<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
</head>
<body>
    <%- include('partials/sidebar') %>
    <div class="main-content">
        <h1>Reports Page</h1>
        <p>View and manage reports here.</p>

        <div class="report-filters">
            <label for="filter">Filter Reports:</label>
            <select id="filter" onchange="filterReports()">
                <option value="all">All</option>
                <option value="monthly">Monthly</option>
                <option value="yearly">Yearly</option>
            </select>
        </div>

        <table id="reportsTable" class="display">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Report Type</th>
                    <th>Details</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dynamic content will be inserted here -->
            </tbody>
        </table>
    </div>

    <script src="/static/js/sidebar-toggle.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            loadReports(); // Load reports on page load

            // Initialize DataTable
            $('#reportsTable').DataTable();
        });

        // Function to fetch reports data from the server
        async function loadReports() {
            const response = await fetch('/api/reports'); // Adjust endpoint as needed
            const reports = await response.json();
            const tableBody = $('#reportsTable tbody');

            // Clear existing rows
            tableBody.empty();

            // Append new rows
            reports.forEach(report => {
                const row = `<tr>
                    <td>${new Date(report.date).toLocaleDateString()}</td>
                    <td>${report.type}</td>
                    <td>${report.details}</td>
                    <td>${report.status}</td>
                </tr>`;
                tableBody.append(row);
            });
        }

        // Function to filter reports based on selected criteria
        function filterReports() {
            const filterValue = $('#filter').val();
            const table = $('#reportsTable').DataTable();

            if (filterValue === 'all') {
                table.columns().search('').draw();
            } else {
                table.columns(1).search(filterValue).draw(); // Assuming the report type is in the second column
            }
        }
    </script>
</body>
</html>
