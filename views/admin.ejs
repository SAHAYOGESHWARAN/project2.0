<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
</head>
<body>
    <%- include('partials/sidebar') %>
    <div class="main-content">
        <h1>Admin Panel</h1>
        <p>Manage admin settings here.</p>

        <div class="user-management">
            <h2>User Management</h2>
            <button id="addUserBtn" onclick="openUserModal()">Add User</button>
            <table id="usersTable" class="display">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dynamic user content will be inserted here -->
                </tbody>
            </table>
        </div>

        <!-- Modal for adding/editing user -->
        <div id="userModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeUserModal()">&times;</span>
                <h2 id="modalTitle">Add User</h2>
                <form id="userForm">
                    <input type="hidden" id="userId" value="">
                    <label for="name">Name:</label>
                    <input type="text" id="name" required>
                    <label for="email">Email:</label>
                    <input type="email" id="email" required>
                    <label for="role">Role:</label>
                    <select id="role" required>
                        <option value="user">User</option>
                        <option value="admin">Admin</option>
                    </select>
                    <button type="submit">Save User</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/static/js/sidebar-toggle.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            loadUsers(); // Load users on page load

            // Initialize DataTable
            $('#usersTable').DataTable();
        });

        // Function to fetch users from the server
        async function loadUsers() {
            const response = await fetch('/api/users'); // Adjust endpoint as needed
            const users = await response.json();
            const tableBody = $('#usersTable tbody');

            // Clear existing rows
            tableBody.empty();

            // Append new rows
            users.forEach(user => {
                const row = `<tr>
                    <td>${user.name}</td>
                    <td>${user.email}</td>
                    <td>${user.role}</td>
                    <td>
                        <button onclick="editUser('${user._id}', '${user.name}', '${user.email}', '${user.role}')">Edit</button>
                        <button onclick="deleteUser('${user._id}')">Delete</button>
                    </td>
                </tr>`;
                tableBody.append(row);
            });
        }

        // Function to open the user modal for adding a new user
        function openUserModal() {
            $('#userModal').show();
            $('#modalTitle').text('Add User');
            $('#userForm')[0].reset();
            $('#userId').val('');
        }

        // Function to close the user modal
        function closeUserModal() {
            $('#userModal').hide();
        }

        // Function to edit user details
        function editUser(id, name, email, role) {
            $('#userId').val(id);
            $('#name').val(name);
            $('#email').val(email);
            $('#role').val(role);
            $('#modalTitle').text('Edit User');
            $('#userModal').show();
        }

        // Function to delete a user
        async function deleteUser(id) {
            if (confirm('Are you sure you want to delete this user?')) {
                await fetch(`/api/users/${id}`, {
                    method: 'DELETE'
                });
                loadUsers(); // Reload users after deletion
            }
        }

        // Event listener for user form submission
        $('#userForm').on('submit', async function(event) {
            event.preventDefault();
            const id = $('#userId').val();
            const userData = {
                name: $('#name').val(),
                email: $('#email').val(),
                role: $('#role').val()
            };

            if (id) {
                // Update existing user
                await fetch(`/api/users/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(userData)
                });
            } else {
                // Create new user
                await fetch('/api/users', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(userData)
                });
            }

            loadUsers(); // Reload users
            closeUserModal(); // Close the modal
        });
    </script>

    <style>
        /* Basic modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</body>
</html>
