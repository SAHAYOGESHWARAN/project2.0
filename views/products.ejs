<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
    <%- include('partials/sidebar') %>

    <div class="main-content">
        <h1>Products Management</h1>

        <form id="addProductForm" method="POST" action="/products/add">
            <h2>Add New Product</h2>
            <input type="text" name="productName" placeholder="Product Name" required>
            <input type="number" name="productPrice" placeholder="Price" required step="0.01">
            <input type="text" name="productCategory" placeholder="Category" required>
            <input type="text" name="productImage" placeholder="Image URL" required>
            <button type="submit">Add Product</button>
        </form>

        <div class="product-list">
            <h2>Product List</h2>
            <table class="product-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products.length === 0) { %>
                        <tr>
                            <td colspan="6">No products found</td>
                        </tr>
                    <% } else { %>
                        <% products.forEach(product => { %>
                            <tr>
                                <td><%= product._id %></td>
                                <td><%= product.name %></td>
                                <td><%= product.price.toFixed(2) %></td>
                                <td><%= product.category %></td>
                                <td>
                                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" style="width: 50px; height: auto;">
                                </td>
                                <td>
                                    <button class="edit-btn" onclick="openEditModal('<%= product._id %>', '<%= product.name %>', <%= product.price %>, '<%= product.category %>', '<%= product.imageUrl %>')">Edit</button>
                                    <button class="delete-btn" onclick="confirmDelete('<%= product._id %>')">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="/static/js/sidebar-toggle.js"></script>
    <script src="/static/js/products.js"></script>
</body>
</html>


    <script>
        function confirmDelete(productId) {
            if (confirm('Are you sure you want to delete this product?')) {
                fetch(`/products/${productId}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to delete the product.');
                    }
                });
            }
        }

        function openEditModal(id, name, price, category) {
            document.getElementById('editProductId').value = id;
            document.getElementById('editProductName').value = name;
            document.getElementById('editProductPrice').value = price;
            document.getElementById('editProductCategory').value = category;
            document.getElementById('editModal').style.display = 'block';
        }

        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
        }

        // Close the modal when clicking outside of it
        window.onclick = function(event) {
            const modal = document.getElementById('editModal');
            if (event.target == modal) {
                closeEditModal();
            }
        };
    </script>
</body>
</html>
