<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users Management</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('partials/sidebar', { activePage: 'users' }) %>

    <div class="main-content">
        <h1>Users Management</h1>

        <% if (messages && messages.success && messages.success.length) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        <% if (messages && messages.error && messages.error.length) { %>
            <div class="alert alert-error"><%= messages.error %></div>
        <% } %>

        <div class="user-actions">
            <input type="text" id="search" placeholder="Search users..." class="search-bar">
            <button id="add-user-btn" class="add-user-btn">Search User</button>
            <button id="show-add-user-form" class="add-user-btn">Add User</button>
        </div>

        <div id="add-user-form" class="hidden">
            <h2>Add New User</h2>
            <form action="/users/add" method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
                
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
                
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
                
                <label for="phonenumber">Phone Number:</label>
                <input type="text" id="phonenumber" name="phonenumber" required>
                
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
                
                <label for="role">Role:</label>
                <select id="role" name="role" required>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
        
                <button type="submit" class="submit-btn">Add User</button>
                <button type="button" id="cancel-btn" class="cancel-btn">Cancel</button>
            </form>
        </div>

        <div class="user-list">
            <h2>User List</h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <td>
                                <button class="edit-btn">Edit</button>
                                <button class="delete-btn">Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="/static/js/sidebar-toggle.js"></script>
    <script src="/static/js/users.js"></script>
</body>
</html>
